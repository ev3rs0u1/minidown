#!/usr/bin/env ruby

require 'minidown'
require 'optparse'

Usage = "Usage: minidown FILE"
OptionParser.new do |opts|
  opts.banner = Usage

  opts.on_tail "-v", "--version", "Show current version" do |v|
    STDOUT.puts Minidown::VERSION
    exit
  end

  opts.on_tail "-h", "--help", "Show this message" do |v|
    STDOUT.puts opts
    exit
  end
end.parse!

file = ARGV.first
if file
  puts Minidown.render(open(file).read)
else
  $stderr.puts Usage
  exit 1
end
